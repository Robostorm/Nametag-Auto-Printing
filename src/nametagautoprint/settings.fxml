<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane 
    xmlns:fx="http://javafx.com/fxml/1"
    id="AnchorPane"
    prefHeight="800.0" 
    prefWidth="100.0" 
    styleClass="mainFxmlClass" 
    fx:controller="nametagautoprint.SettingsController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
    <top>
        <VBox fx:id="passBox" alignment="CENTER">
            <Label text="Password" minWidth="100" alignment="CENTER"></Label>
            <PasswordField fx:id="password" maxWidth="100"></PasswordField>
        </VBox>
    </top>
    
    <center>
        <HBox fx:id="settings" alignment="CENTER" spacing="10" visible="false" >
            <Button fx:id="printersBtn" text="Printers"></Button>
            <Button fx:id="queueBtn" text="Queue"></Button>  
        </HBox>
    </center>
    
    <bottom>
        <HBox id="footer" alignment="TOP_CENTER"> 
            <Button fx:id="settingsBack" text="Back"></Button>
        </HBox>
    </bottom>
    
</BorderPane>
