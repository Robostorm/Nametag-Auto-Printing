<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="config" class="org.robostorm.config.ConfigImpl">
        <constructor-arg name="servletContext" value="#{servletContext}"/>
        <constructor-arg name="configFileName" type="java.lang.String" value="config.xml"/>
        <constructor-arg name="queueFileName" type="java.lang.String" value="queue.xml"/>
        <property name="password" value="r0b0tic$"/>
        <property name="imagesDirectory" value="images/"/>
        <property name="scadDirectory" value="openscad/"/>
        <property name="stlDirectory" value="stl/"/>
        <property name="gcodeDirectory" value="gcode/"/>
        <property name="loopTime" value="5000"/>
    </bean>

    <bean id="taskExecutor" class="org.springframework.core.task.SimpleAsyncTaskExecutor"/>

    <bean id="nameTagQueue" class="org.robostorm.queue.NameTagQueue"/>

    <bean id="printerQueue" class="org.robostorm.queue.PrinterQueue"/>

    <bean id="previewService" class="org.robostorm.service.PreviewServiceImpl"/>

    <bean id="printService" class="org.robostorm.service.PrintServiceImpl"/>

    <bean id="printServer" class="org.robostorm.server.PrintServer"/>

    <context:component-scan base-package="org.robostorm"/>

</beans>